<html >
    <head>
        <title>@ViewData["Title"] - Minha App Modelo</title>

        <environment include="Development">            
            <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.css"/>
            <link rel="stylesheet" href="~/lib/font-awesome/css/font-awsome.css"/>

            <!--
                Caso use o arquivo gerado pelo bundle, pode escluir as referencias dos arquivos incluidos do bundle
            <link rel="stylesheet" href="~/css/site_bundle.min.css" />
            -->
        </environment>
        
        <environment exclude="Development">
            <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.min.css"
              asp-fallback-href="~/lib/bootstrap/css/bootstrap.min.css" 
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolut"
              crossorigin="anonymous"
              integrity="sha256-eSi1q2PG6J7g7ib17yAaWMcrr5GrtohYChqibrV7PBE=" />
        </environment>

    <link rel="stylesheet" href="~/css/site.css" />

    </head>

    <body>

        <header>
            <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom mv-3">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index" >AppModelo</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" 
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="Produtos" asp-controller="Cadastro" asp-action="Index">Cadastro</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="Vendas" asp-controller="Pedidos" asp-action="Index">Pedidos</a>
                        </li>
                    </ul>
                </div>                   

            </nav>
        </header>

        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
        
        <footer class="border-top footer text-muted">
            <div class="container">
            Minha App Modelo - <email email-domain="gmail.com">contato</email> - <email>suporte</email>
            </div>
        </footer>

        <environment include="Development">
            <link rel="stylesheet" href="~/lib/jquery/jquery.js" />
            <link rel="stylesheet" href="~/lib/bootstrap/js/bootstrap.min.js" />
        </environment>

        <environment exclude="Development">
            <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/js/bootstrap.bundle.min.js"
                  asp-fallback-href="~/lib/bootstrap/js/bootstrap.min.js"
                  asp-fallback-test="window.Jquery && window.Jquery.fn && window.Jquery.fn.modal"
                  crossorigin="anonymous"
                  integrity="sha256-E/V4cWE4qvAeO5MOhjtGtqDzPndRO1LBk81J/PR7CA4=" />
        </environment>

    <link rel="stylesheet" href="~/js/site.js" />

    </body>
</html>